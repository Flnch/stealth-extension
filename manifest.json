{
    "manifest_version": 2,
    "name": "Stealth-extension",
    "version": "1.0",
    "description": "Extension making automated browsers more stealth by spoofing the DOM webdriver attribute to false.",

    "applications": {
        "gecko": {
            "id": "stealth-extension@example.org"
        }
    },

    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "tabs"
    ],

    "background": {
        "scripts": ["background/main.js"]
    }
}
